# Environment Configuration
# Copy this file to .env and fill in your values

# Server
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/edubot
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/edubot

# JWT Secret (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# OpenAI API (Option 1 - Recommended)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Google Gemini API (Option 2 - Free alternative)
GOOGLE_API_KEY=your-google-gemini-api-key-here
GEMINI_MODEL=gemini-pro

# AI Provider (openai or gemini)
AI_PROVIDER=openai

# VAPID Keys for Push Notifications (generate using: npx web-push generate-vapid-keys)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:your-email@example.com

# CORS
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
